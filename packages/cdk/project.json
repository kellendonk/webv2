{
  "name": "cdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cdk/src",
  "projectType": "application",
  "implicitDependencies": [
    "web"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "cdk --app \"ts-node -P packages/cdk/tsconfig.app.json packages/cdk/src/main.ts\" synth -o dist/packages/cdk"
          }
        ]
      },
      "dependsOn": [
        "^build"
      ]
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "cdk:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "cdk:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/cdk/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/cdk/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
