{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/web",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "cp packages/web/Dockerfile dist/packages/web/"
          }
        ]
      },
      "dependsOn": [
        "build-next"
      ]
    },
    "build-next": {
      "executor": "@nrwl/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "root": "packages/web",
        "outputPath": "dist/packages/web"
      },
      "configurations": {
        "development": {
          "outputPath": "packages/web"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web:build-next",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "web:build-next:development",
          "dev": true
        },
        "production": {
          "buildTarget": "web:build-next:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "web:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/web/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/web/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": []
}
